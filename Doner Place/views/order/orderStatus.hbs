<h1>Your orders</h1>
<div class="orders">
    {{#each orders}}
        <div class="order">
            <span class="order-time"> {{this.date}}</span>
            <span class="order-name">{{this.product.category}} doner, {{this.product.size}} cm</span>
            <span class="order-status">{{this.status}}</span>
            <a href="/order/orderDetails/{{this._id}}" class="button order-button">Details</a>
        </div>

    {{else}}
        <h2>No orders :(</h2>
    {{/each}}
</div>