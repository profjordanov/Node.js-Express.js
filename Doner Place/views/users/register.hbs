<form action="/register" method="POST" class="form center-form">

    <div class="form-group">
        <label for="name">Username:</label>
        <input type="text" name="username" class="input-field"><br>
    </div>

    <div class="form-group">
        <label for="name">Password:</label>
        <input type="password" name="password" class="input-field"><br>
    </div>

    <div class="form-group">
        <label for="name">First name:</label>
        <input type="text" name="firstName" class="input-field"><br>
    </div>

    <div class="form-group">
        <label for="name">Last name:</label>
        <input type="text" name="lastName" class="input-field"><br>
    </div>

    <div class="form-group">
        <input type="submit" value="Register" class="button">
    </div>
</form>