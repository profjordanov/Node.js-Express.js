<h1>All orders</h1>
<div class="orders">
  <form method="post">
    {{#each allOrders}}
    <div class="order">
      <span class="order-time">{{this.orderedOnStr}}</span>
      <span class="order-name">{{this.product.category}} doner, {{this.product.size}} cm</span>
      <input name="orderId" type="hidden" value="{{this._id}}">
      <select selected="{{this.status}}" name="status">
        {{#if pending}}
        <option value="Pending" selected>Pending</option>
        <option value="In Progress">In Progress</option>
        <option value="In transit">In transit</option>
        <option value="Delivered">Delivered</option>
        {{/if}} {{#if inProgress}}
        <option value="Pending">Pending</option>
        <option value="In Progress" selected>In Progress</option>
        <option value="In transit">In transit</option>
        <option value="Delivered">Delivered</option>
        {{/if}} {{#if inTransit}}
        <option value="Pending">Pending</option>
        <option value="In Progress">In Progress</option>
        <option value="In transit" selected>In transit</option>
        <option value="Delivered">Delivered</option>
        {{/if}} {{#if delivered}}
        <option value="Pending">Pending</option>
        <option value="In Progress">In Progress</option>
        <option value="In transit">In transit</option>
        <option value="Delivered" selected>Delivered</option>
        {{/if}}
      </select>
    </div>
    {{else}}
    <h1>
      No orders in database
    </h1>
    {{/each}}
    <input type="submit" value="Change Status" class="button">
  </form>
</div>